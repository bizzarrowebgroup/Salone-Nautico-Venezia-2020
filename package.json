    "react-native-gesture-handler": "^1.6.0",
    "react-native-reanimated": "1.4.0",
    "react-native-safe-area-context": "0.6.0",
    "react-native-screens": "^2.0.0-beta.0",
    "typescript": "3.7.4",
    "uuid": "3.4.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn ci"
    }
  },
  "config": {
    "react-native-storybook-loader": {
