{
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "eject": "expo eject",
    "test:watch": "jest --watchAll",
    "test": "jest",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx ./app",
    "typescript": "tsc --noEmit",
